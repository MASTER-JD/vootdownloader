{
  "manifest_version": 2,

  "name": "Voot Video Downloader",
  "description": "Download Voot videos from Official website https://www.voot.com",
  "version": "1.0",
  "icons" : {
    "128": "voot_icon.png"
  },
  "browser_action": {
    "default_icon": "voot_icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js","XhrLoader.js","Fragment.js","m3u8-parser.min.js","MediaDetails.js","Decrypter.js","FragmentManager.js"]
  },
  "permissions": [
    "activeTab",
    "https://www.voot.com/*"
  ]
}