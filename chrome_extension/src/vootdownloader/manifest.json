{
  "manifest_version": 2,

  "name": "Online Video Strem Downloader",
  "description": "Download Voot videos from Official website https://www.voot.com , http://www.hotstar.com/ , http://www.dailymotion.com",
  "version": "2.0",
  "icons" : {
    "128": "voot_icon.png"
  },
  "browser_action": {
    "default_icon": "voot_icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["XhrLoader.js","Fragment.js","m3u8-parser.min.js","MediaDetails.js","Decrypter.js","FragmentManager.js","TaskManager.js","background.js"]
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "<all_urls>",
    "storage",
    "unlimitedStorage"
  ]
}
